    <!-- Section-->

    <section class="py-5">


        <!-- sortButton -->
        <div class="dropdown">
            <button class="dropbtn">Sort By</button>
            <div class="dropdown-content">
                <a href="/classic/popularity">Popularity</a>
                <a href="/classic/energy">Energy Drinks</a>
                <a href="/classic/priceLowToHigh">Price: Low to High</a>
                <a href="/classic/priceHighToLow">Price: High to Low</a>
                <a href="#">Average Ratings</a>
                <a href="/classic/featured">Featured</a>
                <a href="/classic/newArrivals">New Arrivals</a>
                <a href="/classic/a-z">aA - zZ</a>
                <a href="/classic/z-a">zZ - aA</a>
            </div>
        </div>
        <!-- sortButton -->


        <div class="container px-4 px-lg-5 mt-5">


            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% showProducts.forEach((product)=> { %>
                    <% const productData = product._doc; %>
                    <div class="col mb-5"">
                        <div class=" t1" class="card">
                        <!-- Product image-->
                        <a href="/getProductDetails/<%=productData._id%>">
                            <div class="imgbox">
                                <img id="productbg" src="/img/productBackground.png" alt="">
                                <img class="card-img-top" src="<%=productData.productImage%>" alt="V8" />
                            </div>
                        </a>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder"><%= productData.productName %></h5>
                                <!-- Product price-->
                                <% if(product.Offerprice > 0) { %>
                                    <span class="text-muted text-decoration-line-through">₹<%= productData.price %></span>
                                           

                                    <span class="text-success">₹<%= (product.Offerprice).toFixed(2) %></span>
                                <% } else if(product.productOfferPrice > 0){ %>
                                  
                                    <span class="text-muted text-decoration-line-through">₹<%= productData.price %></span>
                                  
                                    $<%= product.productOfferPrice %>
                                <% } else { %>
                                  
                                    <span class="text-muted text-decoration-line-through">₹<%= productData.price %></span>
                                  
                                    ₹<%= productData.price %>
                                <% } %>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <form action="/addToCart/<%= productData._id %>" method="POST">
                                <div class="text-center">
                                    <button type="submit" class="btn cart" name="addToCart">Add To Cart</button>
                                     <!-- <a class="btn buy" href="/checkout">Buy</a> -->
                                    <a class="btn buy" href="/addToWishlist/<%= productData._id %>">wishlist</a>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
            <% }); %>

        </div>
        </div>
        </div>

    </section>
